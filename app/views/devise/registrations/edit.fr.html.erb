<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>Modifier l'utilisateur</h2>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name, "Nom"%>
        <%= f.text_field :name, class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "form-control", :autofocus => true %>
      </div>

      <div class="form-group">
        <%= f.label :password, "Mot de passe" %> <i>(laissez en blanc si vous ne voulez pas changer)</i>
        <%= f.password_field :password, class: "form-control", :autocomplete => "de" %>
      </div>

      <div class="form-group">
        <%= f.label :current_password, "Mot de passe actuel" %> <i>(nous avons besoin de votre mot de passe actuel pour confirmer vos modifications)</i>
        <%= f.password_field :current_password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <h3>Annuler mon compte</h3>

    <p>Unhappy? <%= button_to "Annuler mon compte", registration_path(resource_name), :data => { :confirm => "Êtes-vous sûr?" }, :method => :delete, class: "btn btn-warning" %></p>

    <%= link_to "retourner", :back %>
  </div>
</div>
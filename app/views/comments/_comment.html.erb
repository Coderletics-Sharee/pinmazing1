<%= div_for(comment) do %>
<p>
	<strong>Posted <%= time_ago_in_words(comment.created_at) %> ago</strong><br>
	<%= h(comment.body) %>
</p>
<p>
  <%= link_to 'Edit', [comment.pin, comment],
               method: :edit,
               data: { confirm: 'Are you sure?' } %>
</p>
<p>
  <%= link_to 'Delete', [comment.pin, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
</p>
<% end %>